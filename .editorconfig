root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
csharp_new_line_before_open_brace = all
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_indent_labels = one
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_between_parentheses = false
csharp_space_between_empty_parameter_list_parentheses = false

dotnet_naming_rule.interface_type = interface
dotnet_naming_symbols.interface_type.applicable_kinds = interface
dotnet_naming_symbols.interface_type.applicable_accessibilities = public, internal
dotnet_naming_symbols.interface_type.required_modifiers = IS
dotnet_naming_style.IS.capitalization = pascal_case
dotnet_naming_style.IS.required_prefix = I
